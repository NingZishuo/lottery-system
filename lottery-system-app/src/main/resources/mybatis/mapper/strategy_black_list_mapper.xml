<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lottery.infrastructure.persistent.dao.IStrategyBlackListDao">

    <resultMap id="dataMap" type="com.lottery.infrastructure.persistent.po.StrategyBlackList">
        <id column="id" property="id"/>
        <result column="strategy_id" property="strategyId"/>
        <result column="award_id" property="awardId"/>
        <result column="user_id" property="userId"/>
    </resultMap>

    <!--StrategyBlackList queryStrategyBlackList(StrategyBlackList strategyBlackList);-->
    <select id="queryStrategyBlackList" resultMap="dataMap">
        select * from strategy_black_list
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="strategyId!=null">
                and strategy_id = #{strategyId}
            </if>
            <if test="awardId!=null">
                and award_id = #{awardId}
            </if>
            <if test="userId !=null">
                and user_id = #{userId}
            </if>
        </where>
    </select>

</mapper>
